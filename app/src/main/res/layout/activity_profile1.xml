<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".profile1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:textSize="25dp"
        android:id="@+id/fullnametxt1"
        android:text="Full Name"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:textSize="25dp"
        android:text="Email"
        android:id="@+id/emailtxt1"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:textSize="25dp"
        android:text="Telephone No"
        android:id="@+id/telephonetxt1"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:textSize="25dp"
        android:layout_marginBottom="80dp"
        android:id="@+id/worktypetxt1"
        android:text="Work Type"
        />
    <Button
        android:id="@+id/btnBookMe"
        android:layout_width="229dp"
        android:layout_height="wrap_content"

        android:padding="15dp"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        android:background="@drawable/custom_button"
        android:text="Book Me" />

    <Button
        android:id="@+id/btnCreateChat"
        android:layout_width="229dp"
        android:layout_height="wrap_content"

        android:layout_gravity="center"
        android:layout_margin="8dp"
        android:background="@drawable/custom_button"
        android:padding="15dp"
        android:text="Chat" />


    <RatingBar
        android:id="@+id/rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:isIndicator="true"
        android:numStars="5"
        android:stepSize=".5" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        android:background="@drawable/custom_button"
        android:text="RATE ME" />

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Log Out" />

</LinearLayout>